<h1>{% block title %}Contact{% endblock%}</h1>

{% block body %}
  <header>
    <h1>Contact symblog</h1>
  </header>

  {% for flashMessage in app.session.flashbag.get('acme-blog-notice') %}
    {{ flashMessage }}
  {% endfor %}

  <p>Want to contact symblog?</p>

  <form action="{{ path('acme_hello_contact') }}" method="post" {{ form_enctype(form) }} class="blogger">
    {{ form_errors(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.subject) }}
    {{ form_row(form.body) }}

    {{ form_rest(form) }}

    <input type="submit" value="Submit" />
  </form>
{% endblock %}
